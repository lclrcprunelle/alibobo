<div class="container">
  <%= cl_image_tag @product.photo.key, class: "card-img-top" %>
  <h1><%= @product.title%></h1>
  <h3><%= @product.price%> $AUS</h3>
  <h3><%= @product.description%></h3>

  <button> <%= link_to "Edit my product", edit_product_path(@product) %></button>
  <button> <%= link_to "Delete my product", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
  <button> <%= link_to "Go back", products_path %></button>

</div>
