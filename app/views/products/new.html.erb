<div class="container mt-4 px-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <%= simple_form_for @product do |f| %>
        <%= f.input :title %>
        <%= f.input :price %>
        <%= f.input :category, collection: ["Travel", "Electronics", "Men's clothing", "Jewelery", "Women's clothing", "Sport", "Food", "Cosmetic", "+18", "Other"] %>
        <%= f.input :description %>
        <%= f.input :rating, collection: 1..5 %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Rent it" %>
      <% end %>
    </div>
  </div>
</div>
